<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="меню"
        app:backgroundTint="@color/black"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="665dp" />

    <TextView
        android:id="@+id/textView2"
        android:background="#ffffff"
        android:layout_width="103dp"
        android:layout_height="25dp"
        android:text="Ваш профиль:"

        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="430dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:background="#615652"
        android:text="выход"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="182dp"
        android:layout_height="27dp"
        android:background="#ffffff"
        android:clickable="false"
        android:cursorVisible="false"
        android:text="123456789@mail.ru"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="играть"
        app:backgroundTint="bla"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/button2"
        tools:layout_editor_absoluteY="544dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="222dp"
        android:layout_height="111dp"
        android:background="none"
        android:bufferType="normal"
        android:capitalize="none"
        android:text="Project A"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button2"
        tools:layout_editor_absoluteY="56dp" />


</androidx.constraintlayout.widget.ConstraintLayout>